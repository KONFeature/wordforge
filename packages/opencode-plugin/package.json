{
  "name": "@wordforge/opencode-plugin",
  "version": "0.1.0",
  "description": "OpenCode plugin for Gutenberg block manipulation via browser bridge",
  "type": "module",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --minify",
    "dev": "bun build src/index.ts --outdir dist --target bun --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "^1.3.5",
    "typescript": "^5.7.3"
  },
  "files": ["dist", "src"],
  "keywords": ["opencode", "plugin", "wordpress", "gutenberg"]
}
