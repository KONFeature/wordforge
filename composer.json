{
    "name": "konfeature/wordforge",
    "description": "Forge your WordPress site through conversation - MCP-powered content, commerce, and design management",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "konfeature"
        }
    ],
    "require": {
        "php": "^8.0",
        "wordpress/mcp-adapter": "^0.4",
        "wordpress/abilities-api": "*",
        "automattic/jetpack-autoloader": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "WordForge\\": "includes/"
        }
    },
    "config": {
        "allow-plugins": {
            "automattic/jetpack-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8.0"
        }
    },
    "scripts": {
        "lint:php": "phpcs --standard=WordPress -s",
        "lint:php:fix": "phpcbf --standard=WordPress"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
